<Page x:Class="BookRentProg.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BookRentProg"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainPage">

    <Grid Background="White" Margin="2.5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Label Content="Könyvek" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="2.5"/>
        <ListBox Grid.Row="1" x:Name="LB_Books" Margin="2.5" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <Grid Grid.Row="2" Margin="2.5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0" Content="Új" Name="BTN_New" Margin="2.5"/>
            <Button Grid.Column="1" Content="Szerkesztés" Name="BTN_Edit" Margin="2.5"/>
            <Button Grid.Column="2" Content="Törlés" Name="BTN_Delete" Margin="2.5"/>
        </Grid>
    </Grid>
</Page>
